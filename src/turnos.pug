    .FormWrapper
      .row
        .col-md-12
          h2.page-header Pacientes
          a.btn.btn-primary(href="/pacientes/crear")
            i.fa.fa-plus
            |  Nuevo Paciente
          table.table.table-striped
            .input-group
            thead
              tr
                th Tel/Cel
                th Apellido
                th Nombre
            tbody
              
              tr
                th(scope="row") Telefono
                td Apellido
                td Nombre
                td.actionBotons
                  a.btn.btn-success(href="/pacientes/detalles/{{paciente.id}}")
                    i.fa.fa-eye
                  a.btn.btn-default(href="/pacientes/editar/{{paciente.id}}")
                    i.fa.fa-pencil
                  a.btn.btn-danger(href="/pacientes/eliminar/{{paciente.id}}" onclick="return confirm('Esta seguro de que quiere eliminar?')")
                    i.fa.fa-trash
              tr.mfView
                td.mfBtns
                  a.btn.btn-success(href="/pacientes/detalles/{{paciente.id}}")
                    i.fa.fa-eye
                td.mfBtns
                  a.btn.btn-default(href="/pacientes/editar/{{paciente.id}}")
                    i.fa.fa-pencil
                td.mfBtns
                  a.btn.btn-danger(href="/pacientes/eliminar/{{paciente.id}}" onclick="return confirm('Esta seguro de que quiere eliminar?')")
                    i.fa.fa-trash
